@model IEnumerable<CharityProject.Entities.DomainClasses.Partner>

@{
    ViewBag.Title = "Partners";
}



    <div class="container">
        <h2>Partners</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <p>Press Edit for Description Details...</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
          
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PartnerId }, new { @class = "btn btn-primary" })

                @Html.ActionLink("Delete", "Delete", new { id = item.PartnerId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
            }

        </table>
    </div>