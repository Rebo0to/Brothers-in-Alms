@model CharityProject.Entities.DomainClasses.Subscription

@{
    ViewBag.Title = "Details";
}



<div class="container-fluid" style="margin-bottom:10px;height:90px;background-image: radial-gradient(circle farthest-corner at center, #3C4B57 0%, #1C262B 100%);">

</div>


<!-- Page Content -->
<div class="container" style="margin:30px">
    <p>
        @Html.ActionLink("Back to Cause Page", "Index", "Cause", null, new { @class = "btn btn-outline-warning" })
    </p>

    <h1 class="my-4">
        @Model.Title <br />
        <small>Partner: <strong>@Model.Partner.Name</strong></small>
        <small style="font-size:24px">( @Model.Partner.Country</small>
        <small style="font-size:24px">@Model.Partner.Address )</small>
    </h1>


    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Partner.ImageUrl" style="width:100%;" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p class="small" style="height:40px">@Model.Description</p>
            <h3 class="my-3">Subscribe Now !</h3>

            <div>



                <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="CNNZMCZPVSM56">
                    <table>
                        <tr><td><input type="hidden" name="on0" value=""></td></tr>
                        <tr>
                            <td>
                                <select name="os0" class="form-control">
                                    <option value="A">A : €10.00 EUR - monthly</option>
                                    <option value="B">B : €20.00 EUR - monthly</option>
                                    <option value="C">C : €25.00 EUR - monthly</option>
                                    <option value="D">D : €30.00 EUR - monthly</option>
                                    <option value="E">E : €50.00 EUR - monthly</option>
                                    <option value="F">F : €75.00 EUR - monthly</option>
                                    <option value="G">G : €100.00 EUR - monthly</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                    <input type="hidden" name="currency_code" value="EUR">
                    <input  type="image" src="~/images/paypal-donate-icon-27.jpg" style="width:180px; margin-left:10px" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.sandbox.paypal.com/el_GR/i/scr/pixel.gif" width="1" height="1">
                </form>

            </div>
        </div>

    </div>
</div>



